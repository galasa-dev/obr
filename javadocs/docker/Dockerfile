ARG baseVersion
ARG dockerRepository
FROM ${dockerRepository}/galasadev/galasa-xmaven-base:${baseVersion}

ARG branch

RUN sed -i "s/--branchname--/${branch}/"    /usr/local/apache2/conf/httpd.conf
RUN sed -i 's/--repositoryname--/javadoc/'  /usr/local/apache2/conf/httpd.conf

COPY repo/ /usr/local/apache2/htdocs/
